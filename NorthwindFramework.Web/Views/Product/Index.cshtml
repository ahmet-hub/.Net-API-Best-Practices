@model IEnumerable<ProductDto>
@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center"> ÜRÜNLER </h1>
<a class="btn btn-primary mb-3" asp-action="Create">Ürün Ekle</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>NAME</th>
            <th>FİYAT</th>
            <th>STOK</th>
            <th>İŞLEMLER</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.Stock</td>
                

                <td>
                    <a asp-action="Update" asp-route-id="@item.Id">Güncelle</a>
                    <a asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                </td>

            </tr>

        }
    </tbody>
</table>

