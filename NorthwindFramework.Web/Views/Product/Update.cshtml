@model ProductDto
@{
    ViewData["Title"] = "Create";

}

<h1 class="text-center">ÜRÜN GÜNCELLEME </h1>
<div class="row">
    <div class="col-md-8">
        <form asp-action="Update">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name"> Ürün ismi :</label>
                <input asp-for="Name" class="form-control" />
                <label asp-for="Stock"> Stok :</label>
                <input asp-for="Stock" class="form-control" />
                <label asp-for="Price">Fiyat : </label>
                <input asp-for="Price" class="form-control" />

                @*<label asp-for="CategoryId">Category Id :</label>
                    <input asp-for="CategoryId" class="form-control" />*@

                @foreach (var item in ViewBag.Category)
                {
                    <div class="custom-control custom-radio custom-control-inline">
                        <input asp-for="CategoryId" type="radio" class="custom-control-input" id="category_@(item.Id)" value="@item.Id" checked="checked" />
                        <label asp-for="CategoryId" class="custom-control-label" for="category_@(item.Id)">@item.Name</label>
                    </div>
                }


                <span asp-validation-for="Name" class="text-danger"> </span>

            </div>
            <div class="form-group">
                <input type="submit" value="Güncelle" class="btn btn-primary" />
            </div>
        </form>
    </div>

</div>


